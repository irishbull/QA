<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="SeoSuite">

    <parameter name="isProxyRequired" value="true"/>

    <!-- home page -->
