<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="ToosoSuite">

    <parameter name="isProxyRequired" value= "true"/>

    <!-- Search and Suggest -->

  <test name = "SuggestTest">
        <parameter name="json-path" value="src/test/java/ta/test/json/tooso/suggest/ToosoSuggestTest.json"/>
        <classes>
            <class name = "ta.test.impl.tooso.suggest.ToosoSuggestTest" />
        </classes>
    </test>

   <test name = "SearchTest">
        <parameter name="json-path" value="src/test/java/ta/test/json/tooso/search/ToosoSearchTest.json"/>
        <classes>
            <class name = "ta.test.impl.tooso.search.ToosoSearchTest" />
        </classes>
    </test>


    <!-- Analytics -->

    <test name = "PageView">
        <parameter name="json-path" value="src/test/java/ta/test/json/tooso/analytics/ToosoPageViewTest.json"/>
        <classes>
            <class name = "ta.test.impl.tooso.analytics.ToosoPageViewTest" />
        </classes>
    </test>

    <test name = "ClickOnSuggestedTest">
    <parameter name="json-path" value="src/test/java/ta/test/json/tooso/analytics/ToosoClickOnSuggestedTest.json"/>
        <classes>
            <class name = "ta.test.impl.tooso.analytics.ToosoClickOnSuggestedTest" />
        </classes>
    </test>

    <test name = "ClickAfterSearch">
        <classes>
            <class name = "ta.test.impl.tooso.analytics.ToosoClickAfterSearch" />
        </classes>
    </test>

</suite>
