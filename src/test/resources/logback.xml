<configuration>

    <!-- disable BrowserMobProxy log with level < ERROR -->
    <logger name="net.lightbody.bmp.filters.HarCaptureFilter" level="ERROR"/>
    <logger name="net.lightbody.bmp.util.BrowserMobHttpUtil" level="ERROR"/>
    <logger name="net.lightbody.bmp.filters.BrowserMobHttpFilterChain" level="ERROR"/>
    <logger name="org.littleshoot.proxy.impl.ClientToProxyConnection" level="ERROR"/>
    <logger name="org.littleshoot.proxy.impl.ProxyToServerConnection" level="ERROR"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Daily rollover -->
            <fileNamePattern>log/LMTA.%d{yyyy-MM-dd}.log</fileNamePattern>

            <!-- Keep 7 days' worth of history -->
            <maxHistory>7</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Configure so that it outputs to both console and log file -->
    <root level="INFO">
        <appender-ref ref="FILE"/>
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
